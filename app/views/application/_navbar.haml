%nav.navbar.navbar-inverse.navbar-fixed-top{ role: "navigation" }
  .navbar-header
    %button.navbar-toggle{ type: "button", data: {toggle: "collapse", target:".navbar-ex1-collapse" }}
      %span.sr-only
        Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to "Slamar", root_path, class: 'navbar-brand'
  %ul.nav.navbar-right.top-nav
    - if user_signed_in?
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", "data-target" => "#"}
          = icon 'user'
          = current_user.email
          %b.caret
        %ul.dropdown-menu
          %li
            = link_to "#" do
              = icon 'fw fa-user'
              Profile
          %li
            = link_to "#" do
              = icon 'fw fa-gear'
              Settings
          %li.divider
          %li
            = link_to destroy_user_session_path, method: "delete" do
              = icon 'fw fa-power-off'
              Logout
    - else
      %li
        = link_to 'Sign up', new_user_registration_path
      %li
        = link_to 'Log in', new_user_session_path
  .collapse.navbar-collapse.navbar-ex1-collapse
    %ul.nav.navbar-nav.side-nav
      %li
        = link_to root_path do
          = icon 'fw fa-dashboard'
          Dashboard
      %li
        = link_to root_path do
          = icon 'fw fa-bar-chart-o'
          Charts
      %li
        = link_to root_path do
          = icon 'fw fa-edit'
          Forms
      %li
        %a.dropdown-toggle{"data-toggle" => "collapse", "data-target" => "#demo"}
          = icon 'fw fa-arrows-v'
          Temporary links
          = icon 'fw fa-caret-down'
        %ul.collapse{id: "demo"}
          %li
            = link_to 'New General Expense', new_general_expense_path 
          %li
            = link_to 'New Brand Shop', new_brand_shop_path 
