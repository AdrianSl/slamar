.row
  .col-lg-12
    %h1.page-header
      Brand Shops 
.row
  .col-lg-6
    .panel.panel-primary
      .panel-heading
        %h3.panel-title.abc
          = icon 'list'
          List
      .panel-body
        - if @brand_shops.any?
          .table-responsive
            %table.table.table-hover.table-striped
              %tbody
                - @brand_shops.each do |item|
                  %tr
                    %td
                      = item.name
                    %td.text-right
                      = link_to edit_brand_shop_path(item) do
                        = icon 'pencil'
                      = link_to item, class: 'delete', method: :delete, data: { confirm: 'Are you sure?' } do
                        = icon 'remove'
        - else
          There are not any Brand shops to show.
  .col-lg-6
    .panel.panel-green
      .panel-heading
        %h3.panel-title.abc
          = icon 'plus'
          Add new
      .panel-body
        = render partial: "form"
