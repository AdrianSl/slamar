.row
  .col-lg-12
    %h1.page-header
      Dashboard 
      %small
        = @chosen_date
.row
  .col-lg-12
    .btn-group.btn-group-justified{ role: "group" }
      .btn-group{ role:"group" }
        %button.btn.btn-primary{ type: "button" }
          Other
      - @dates.each do |item|
        .btn-group{ role:"group" }
          - if item[:active] == true
            %button.btn.btn-primary.active{ type: "button" }
              = item[:date_name]
          - else
            %a.btn.btn-primary{ type: "button", role: "button", href: "?date=#{item[:date_value]}"}
              = item[:date_name]
    %br
.row
  .col-lg-6
    .panel.panel-red
      .panel-heading
        %h3.panel-title
          = icon 'shopping-cart'
          General Expenses:
      .panel-body
        -if @general_expenses.any?
          .table-responsive
            %table.table.table-bordered.table-hover.table-striped
              %tbody
                = render @general_expenses
  .col-lg-6
    .panel.panel-green
      .panel-heading
        %h3.panel-title
          = icon 'exchange'
          External Shops:
      .panel-body
        -if @incomes_external_shops.any?
          .table-responsive
            %table.table.table-bordered.table-hover.table-striped
              %tbody
                = render partial: "incomes_external_shop", collection: @incomes_external_shops, as: :item
.row
  .col-lg-6
    .panel.panel-yellow
      .panel-heading
        %h3.panel-title
          = icon 'user'
          Brand Shops:
      .panel-body
        -if @incomes_brand_shops.any?
          .table-responsive
            %table.table.table-bordered.table-hover.table-striped
              %tbody
                = render partial: "incomes_brand_shop", collection: @incomes_brand_shops, as: :item
  .col-lg-6
    .panel.panel-primary
      .panel-heading
        %h3.panel-title
          = icon 'truck'
          Truck Routes:
      .panel-body
        -if @incomes_truck_routes.any?
          .table-responsive
            %table.table.table-bordered.table-hover.table-striped
              %tbody
                = render partial: "incomes_truck_route", collection: @incomes_truck_routes, as: :item
