.row
  .col-lg-12
    %h1.page-header
      Dashboard 
      %small
        Statistics Overview
.row
  .col-lg-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = icon 'money fa-fw'
          General Expenses:
      .panel-body
        -if @general_expenses.any?
          .table-responsive
            %table.table.table-bordered.table-hover.table-striped
              %tbody
                = render @general_expenses
  .col-lg-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = icon 'money fa-fw'
          Truck Routes:
      .panel-body
        -if @incomes_truck_routes.any?
          .table-responsive
            %table.table.table-bordered.table-hover.table-striped
              %tbody
                = render partial: "incomes_truck_route", collection: @incomes_truck_routes, as: :item
