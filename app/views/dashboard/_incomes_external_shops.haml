=form_tag update_multiple_incomes_path, method: :put do
  = hidden_field_tag(:date, @presenter.day)
  .panel.panel-green
    .panel-heading
      .container-fluid.panel-container
        .col-xs-8.text-left
          %h3.panel-title.abc
            = icon 'exchange'
            External Shops:
        .col-xs-4.text-right
          .panel-title
            = submit_tag "Save", class: "btn btn-default btn-panel"
    .panel-body
      -if @presenter.incomes_external_shops.any?
        = render partial: "incomes_external_shop", collection: @presenter.incomes_external_shops, as: :income
